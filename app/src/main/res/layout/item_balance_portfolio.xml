<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="27dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOfItem"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/default_corners"
        android:backgroundTint="@color/ui_recycler_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/titleItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Bilanz 1"
                    android:textColor="@color/ui_white"
                    android:textSize="27dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/saldo"
                    android:textColor="@color/ui_white_semitranslucent_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/saldoItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="+ 310,55 â‚¬"
                    android:textColor="@color/ui_white"
                    android:textSize="22dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="5dp" />

            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/containerEditDeletePortfolio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="19" />

                <ImageButton
                    android:id="@+id/editItem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/button_translucent_white"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_edit_list"
                    app:tint="@color/ui_white" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="20" />

                <ImageButton
                    android:id="@+id/deleteItem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/button_translucent_white"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_delete_list"
                    app:tint="@color/ui_white" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="19" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>