<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_light_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.AboutUsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/app_name"
        android:textColor="@color/ui_text"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/textViewVersionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/ui_text"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12dp"
        android:text="Version: 1.0"/>

    <TextView
        android:id="@+id/textViewVersionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Release: 1"
        android:textAlignment="center"
        android:textColor="@color/ui_text_faded"
        android:textSize="9dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/app_description"
        android:textAlignment="center"
        android:textColor="@color/ui_text"
        android:textSize="17dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_xyzerstudios_logo"
        app:tint="@color/ui_text" />


</LinearLayout>