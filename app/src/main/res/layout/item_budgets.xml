<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="27dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBudgetItem"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/default_corners"
        android:backgroundTint="@color/ui_lime_green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/categoryNameItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Kategorie"
                    android:textColor="@color/ui_white"
                    android:textSize="27dp" />


                <TextView
                    android:id="@+id/textViewLeftOrExceeded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/amount_left"
                    android:textColor="@color/ui_white_semitranslucent_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/amountLeftOrExceeded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="310,55 €"
                    android:textColor="@color/ui_white"
                    android:textSize="22dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="5dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/amount_limit"
                    android:textColor="@color/ui_white_semitranslucent_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/amountLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/poppins_medium"
                    android:text="1000,00 €"
                    android:textColor="@color/ui_white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/amount_spent"
                    android:textColor="@color/ui_white_semitranslucent_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/amountSpent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/poppins_medium"
                    android:text="689,45 €"
                    android:textColor="@color/ui_white"
                    android:textSize="18dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="5dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>