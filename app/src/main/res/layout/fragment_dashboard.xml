<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ui_light_background"
    tools:context=".fragments.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">
        
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/portfolioNameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/ui_black"
                android:textSize="28dp"
                android:text="Portfolio 1"/>
            <ImageButton
                android:id="@+id/changePortfolio"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_change_portfolio"
                android:elevation="1dp"
                android:background="@drawable/image_button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:tint="@color/ui_light_background"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ui_lime_green"
            android:layout_margin="2dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/dashboardSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 310,55 €"
                        android:textSize="28dp"
                        android:textColor="@color/ui_white"
                        android:fontFamily="@font/poppins_medium"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/ui_white_semitranslucent_text"
                        android:textSize="15dp"
                        android:text="@string/income"/>
                    <TextView
                        android:id="@+id/dashboardIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/ui_white"
                        android:textSize="15dp"
                        android:text="+ 1.105,46 €"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/ui_white_semitranslucent_text"
                        android:textSize="15dp"
                        android:text="@string/expenses"/>
                    <TextView
                        android:id="@+id/dashboardExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/ui_white"
                        android:textSize="15dp"
                        android:text="- 805,98 €"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/portfolio_circle_watermark"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:id="@+id/buttonCurrentMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/button_translucent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewCurrentMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingRight="4dp"
                            android:paddingLeft="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="17dp"
                            android:textColor="@color/ui_white"
                            android:text="Oktober"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_arrows_up_down"
                            app:tint="@color/ui_light_background" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/button_add_expense"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:elevation="2dp"
                android:gravity="center"
                android:background="@drawable/light_button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/ui_icon">
                <TextView
                    android:id="@+id/button_add_expense_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/ui_icon"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:text="@string/add_expense"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_add_revenue"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingTop="4dp"
                android:elevation="2dp"
                android:gravity="center"
                android:background="@drawable/light_button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/ui_icon">
                <TextView
                    android:id="@+id/button_add_revenue_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/ui_icon"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:text="@string/add_revenue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_add_balance_to_portfolio"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:elevation="2dp"
                android:gravity="center"
                android:background="@drawable/light_button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/ui_icon"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:text="..."/>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/ui_black"
                android:textSize="26dp"
                android:text="@string/income"/>
            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:elevation="2dp"
                android:background="@drawable/image_button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingHorizontal="7dp"
                    android:text="Alle anzeigen"
                    android:textColor="@color/ui_black"
                    android:textSize="11dp"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="1500dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>