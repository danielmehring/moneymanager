<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="27dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/incomeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_margin="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/default_corners"
        android:backgroundTint="@color/ui_white"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/incomeProductname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Produktname"
                    android:textColor="@color/ui_black"
                    android:textSize="26dp" />


                <TextView
                    android:id="@+id/incomePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="19,99 â‚¬"
                    android:textColor="@color/ui_black"
                    android:textSize="22dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/date"
                        android:textSize="14dp"
                        android:textColor="@color/ui_text_strongly_faded"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/incomeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="20. Jan. 2022"
                        android:textSize="14dp"
                        android:textColor="@color/ui_icon"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/category"
                        android:textSize="14dp"
                        android:textColor="@color/ui_text_strongly_faded"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/incomeCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="right"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Essen"
                        android:textSize="14dp"
                        android:textColor="@color/ui_icon"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>