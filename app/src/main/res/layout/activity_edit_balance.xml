<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_white"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    tools:context=".activities.edit.EditBalanceActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/closeActivityEditBalance"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:elevation="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_close"
            app:tint="@color/ui_black" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/ui_black"
            android:textSize="20dp"
            android:text="@string/add_balance"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/editBalance"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:elevation="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_done"
            app:tint="@color/ui_black" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/ui_text_faded"
            android:textSize="15dp"
            android:text="@string/name" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <EditText
            android:id="@+id/editTextBalanceNameEdit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:elevation="2dp"
            android:layout_margin="1dp"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="35"
            android:textColor="@color/ui_text_faded"
            android:background="@drawable/edit_text_custom_bg"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/ui_text_faded"
            android:textSize="15dp"
            android:text="@string/time_stamp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <FrameLayout
            android:id="@+id/chooserBalanceTimestampEdit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:clickable="true"
            android:background="@drawable/invisible"
            android:foreground="?android:attr/selectableItemBackground">



            <TextView
                android:id="@+id/textViewBalanceTimestampEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                android:paddingLeft="12dp"
                android:background="@drawable/edit_text_custom_bg"
                android:text="YYYY_MM_DD"
                android:textColor="@color/ui_text_faded"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_date"
                app:tint="@color/ui_text_faded" />



        </FrameLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/ui_text_faded"
            android:textSize="15dp"
            android:text="@string/portfolio" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <FrameLayout
            android:id="@+id/chooserBalancePortfolioEdit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:clickable="true"
            android:background="@drawable/invisible"
            android:foreground="?android:attr/selectableItemBackground">



            <TextView
                android:id="@+id/textViewBalancePortfolioEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                android:paddingLeft="12dp"
                android:background="@drawable/edit_text_custom_bg"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_expand_more"
                app:tint="@color/ui_text_faded" />



        </FrameLayout>
    </LinearLayout>

</LinearLayout>